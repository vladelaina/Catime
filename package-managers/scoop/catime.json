  "post_install": [
    "$desktop = [System.Environment]::GetFolderPath('Desktop')",
    "Copy-Item \"$dir\\catime_1.1.1.exe\" -Destination $desktop -Force",
    "Remove-Item \"$dir\\*\" -Force -Recurse"
  ],
  "post_uninstall": [
    "$desktop = [System.Environment]::GetFolderPath('Desktop')",
    "$exePath = Join-Path $desktop 'catime_1.1.1.exe'",
    "if (Test-Path $exePath) { Remove-Item $exePath -Force }"
  ]
}
