#include <windows.h>
#include "resource.h"

// 设置 UTF-8 编码
#pragma code_page(65001)

// 创建一个通用的番茄钟时间设置对话框，替换原来的三个对话框

// 番茄钟时间设置对话框
CLOCK_IDD_POMODORO_TIME_DIALOG DIALOGEX 0, 0, 200, 130
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "设置番茄钟时间"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "25=25分钟\n25h=25小时\n25s=25秒\n25 30=25分钟30秒\n25 30m=25小时30分钟\n1 30 20=1小时30分钟20秒", CLOCK_IDC_STATIC, 10, 10, 180, 60
    EDITTEXT        CLOCK_IDC_EDIT, 10, 75, 180, 20, ES_AUTOHSCROLL | ES_MULTILINE
    PUSHBUTTON      "确定", CLOCK_IDC_BUTTON_OK, 140, 100, 50, 14
END

// 保留番茄钟循环次数设置对话框
CLOCK_IDD_POMODORO_LOOP_DIALOG DIALOGEX 0, 0, 200, 130
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "设置番茄钟循环次数"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "请输入番茄钟循环次数（1-10）：\n\n每完成一个循环，将休息一次长时间\n\n例如：设置为4，则连续工作4次后休息长时间", CLOCK_IDC_STATIC, 10, 10, 180, 60
    EDITTEXT        CLOCK_IDC_EDIT, 10, 75, 180, 20, ES_AUTOHSCROLL
    PUSHBUTTON      "确定", CLOCK_IDC_BUTTON_OK, 140, 100, 50, 14
END

// 番茄钟时间组合设置对话框
CLOCK_IDD_POMODORO_COMBO_DIALOG DIALOGEX 0, 0, 200, 130
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "设置番茄钟时间组合"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "输入番茄钟时间序列，用空格分隔：\n\n25m = 25分钟\n30s = 30秒\n1h30m = 1小时30分钟\n例如: 25m 5m 15m - 工作25分钟，短休息5分钟，长休息15分钟", 
                    CLOCK_IDC_STATIC, 10, 10, 180, 60
    EDITTEXT        CLOCK_IDC_EDIT, 10, 75, 180, 20, ES_AUTOHSCROLL | ES_MULTILINE
    PUSHBUTTON      "确定", CLOCK_IDC_BUTTON_OK, 140, 100, 50, 14
END
